<%- include('partials/header'); -%>
<div class="form-container">
<form action="/signup" method="POST">
    <h1 class="signup-heading">Sign Up</h1>

    <div class="form-group">
      <label class="signup-label" for="firstName">First Name</label>
      <input name="firstName" type="input" class="form-control" id="firstName" placeholder="First">
    </div>

    <div class="form-group">
      <label class="signup-label" for="lastName">Last Name</label>
      <input name="lastName" type="input" class="form-control" id="lastName" placeholder="Last">
    </div>


    <div class="form-group">
      <label class="signup-label" for="email">Email address</label>
      <input name="username" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" size="30%">
    </div>

    <div class="form-group">
      <label class="signup-label" for="dob">Date Of Birth</label>
    <input type="date" name="dob" class="form-control" id="dob">
        </div>



    <div class="form-group">
      <label class="signup-label" for="password">Password</label>
      <input name="password" type="password" class="form-control" id="password" placeholder="Password">
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="check">
      <label  class="signup-label" class="form-check-label" for="check">Check me out</label>
    </div>
    <button type="submit" class="btn signup-btn">Submit</button>
  </form>
</div>
<%- include('partials/footer'); -%>
  