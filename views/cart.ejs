<%- include("partials/header")-%> 

<div class="container cart-container">

    <div class="card text-center ">
        <div class="card-header">
          Cart
        </div>
        <div class="card-body">
          <h5 class="card-title">Your Cart Items</h5>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>
              <%item.forEach(element => {%>
               
                <tr>
                  <form action="/delete/<%=element._id%>" method="POST">
                  <td><%=item.indexOf(element)+1%></td>
                  <td><%=element.name%></td>
                  <td><%= element.quantity %> </td>
                  <td><%=element.price%></td>
                  <input type="hidden" name="<%=element.name%> " value="<%=element._id %> ">
                  <td> <button type="submit" class="btn-trash">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                      <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                    </svg>

                  </button></td>
                </form>

                </tr>
                <tr>
              <%});%>
             
              

            </tbody>
          </table>
          <p class="total">Total: <%= total %> â‚¹ </p>
          <div class="cart-btns">
            
          <a href="/" class="btn btn-cart">Shop More</a>
          <a href="#" class="btn btn-cart">BUY</a>
        </div>
        </div>
        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
</div>


<%- include("partials/footer")-%> 